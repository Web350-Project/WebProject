datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Campus {
  Male
  Female
}

enum Status {
  inprogress
  pending
}

enum Gender {
  Male
  Female
}

model User {
  username    String       @id
  password    String
  type        String      
  students    students[]
  instructors instructors[]
}

model students {
  name            String
  id              String            @id
  username        String            @unique
  gender          Gender
  GPA             Float
  user            User              @relation(fields: [username], references: [username])
  enrolledCourses enrolledCourses[] @relation("StudentEnrolledCourses")
}

model courses {
  CName    String
  CNo      String       @id
  Category String
  CH       Int
  status   Status
  prereqs  courses[]    @relation("CoursePrereqs")
  prereqOf courses[]    @relation("CoursePrereqs")
  classes  classes[]
}

model instructors {
  name      String
  username  String    @id
  expertise String
  user      User      @relation(fields: [username], references: [username])
  classes   classes[]
}

model classes {
  CName              String
  img                String
  CNo                String
  Category           String
  Section            String
  CH                 Int
  status             Status
  Campus             Campus
  Seats              String
  CRN                Int               @id
  course             courses           @relation(fields: [CNo], references: [CNo])
  instructor         instructors       @relation(fields: [instructorUsername], references: [username])
  instructorUsername String
  enrolledCourses    enrolledCourses[] @relation("ClassEnrolledCourses")

  @@unique([Section, CNo])
}

model enrolledCourses {
  username String
  CRN      Int
  student  students @relation("StudentEnrolledCourses", fields: [username], references: [username])
  class    classes  @relation("ClassEnrolledCourses", fields: [CRN], references: [CRN])
  Grade    String?

  @@id([username, CRN])
}